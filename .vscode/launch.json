    "version": "0.2.0",
    "configurations": [
        {
            "name": "run_sample_workflow",
            "type": "debugpy",
            "request": "launch",
            "module": "fastworkflow.run",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            },
            "args": [
                "./examples/sample_workflow",
                "./env/.env",
                "--startup_action",
                "./env/startup_action.json"
            ]
        },
        {
            "name": "train_sample_workflow",
            "type": "debugpy",
            "request": "launch",
            "module": "fastworkflow.train",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            },
            "args": [
                "./examples/sample_workflow",
                "./env/.env"
            ]
        },
        {
            "name": "train_fastworkflow",
            "type": "debugpy",
            "request": "launch",
            "module": "fastworkflow.train",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            },
            "args": [
                "./fastworkflow",
                "./env/.env"
            ]
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}